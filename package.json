{
  "name": "phaser-world-explorer",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "add": "^2.0.6",
    "fuzzy": "^0.1.3",
    "husky": "^3.0.9",
    "js-yaml": "^3.13.1",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "query-string": "^6.8.3",
    "react": "^16.10.2",
    "react-collapsible": "^2.6.0",
    "react-dom": "^16.10.2",
    "react-media": "^1.10.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "yarn": "^1.19.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "predeploy": "yarn run build",
    "deploy": "surge -p build -d phaser-world-explorer.surge.sh",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
